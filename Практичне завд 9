#include <stdio.h>

int minSteps(int x, int y) {
    // Визначення різниці між x та y
    int diff = y - x;

    // Обробка випадку, коли diff <= 3
    if (diff <= 3) {
        return diff;
    }

    // Ініціалізація змінних
    int steps = 0;
    int power = 1;
    int range = 2;

    // Знаходження найближчої степені двійки, більшої за diff
    while (range <= diff) {
        power++;
        range *= 2;
    }

    // Обчислення кількості кроків
    if (diff <= (range - range/2)) {
        steps = power;
    } else {
        steps = power + 1;
    }

    return steps;
}

int main() {
    int x, y;
    printf(" x: ");
    scanf("%d", &x);
    printf(" y: ");
    scanf("%d", &y);

    int steps = minSteps(x, y);
    printf("min steps : %d\n", steps);

    return 0;
}
