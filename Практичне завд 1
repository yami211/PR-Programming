#include <stdio.h>
int main() {
    int t1, t2, t3;
    double total_time , time_needed;
    printf("Input:\n");
    scanf("%d %d %d",&t1,&t2,&t3);
  
  // умова значень які можна ввести 
    if (t1>10000||t2>10000||t3>10000)
    {
        printf("ERROR");
        return 0;
    }
    else {
    total_time=1.0/t1+1.0/t2+1.0/t3;  // Обчислення всього часу
  
    time_needed=1.0/total_time; // Обчислення результату

    
     // Виведення результату
    printf("Time needed:%.2f\n", time_needed);
   
    }
    return 0;
   }
