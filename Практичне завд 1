#include <stdio.h>

int main() {
    int t1, t2, t3;
    double total_time, result;

    // Введення значень t1, t2, t3
    printf(" t1: ");
    scanf("%d", &t1);
    printf("t2: ");
    scanf("%d", &t2);
    printf(" t3: ");
    scanf("%d", &t3);

    // Обчислення загального часу та часу на 3
    total_time = t1 +  t2 +  t3;
    result = t1 / total_time + t2 / total_time + t3 / total_time ;

    // Виведення результату
    printf("Total time: %.2f годин\n",  total_time);
      printf("result: %.2f годин\n", result);
    return 0;
}
